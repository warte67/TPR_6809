                      ; ****************
                      ; * ROM_E000.asm *
                      ; ****************
                              
                      
                      ; system call macro to support the Warte variant 
                      ;               of the MC6809e, the 6809w. This replaces
                      ;               the SWI3 instruction with the SYS #n OS9 
                      ;               style system call instruction.
                      SYS             macro
                                      SWI3
                                      fcb             \1              
                                      endm
                                              
                      
                                              
                      
                      ; **************
                      ; * MEMORY MAP *
                      ; **************
0000                                                  org     $0000
                                                      
0000  E020            SOFT_RESET      fdb     do_RESET        ; Software RESET Vector
0002  E00B            SOFT_NMI        fdb     do_NMI          ; Software NMI Vector
0004  E00E            SOFT_SWI        fdb     do_SWI          ; Software SWI Vector
0006  E011            SOFT_IRQ        fdb     do_IRQ          ; Software IRQ Vector
0008  E014            SOFT_FIRQ       fdb     do_FIRQ         ; Software FIRQ Vector
000A  E017            SOFT_SWI2       fdb     do_SWI2         ; Software SWI2 Vector
000C  E01A            SOFT_SWI3       fdb     do_SWI3         ; Software SWI3 Vector
000E  E01D            SOFT_RSRVD      fdb     do_RSRV         ; Software Motorola Reserved Vector
                      
                      
0010  00              var_ch                  fcb             $00
0011  00              var_at                  fcb             $00
0012  00              var_count               fcb             $00
0013  FF              var_csr                 fcb             $ff
0014  00              var_cycle               fcb             $00
0015  00              var_mode_index  fcb             $00
                      
0016                                          INCLUDE "mem_map.asm"
                      ;  **********************************************
                      ;  * Allocated 64k Memory Mapped System Symbols *
                      ;  **********************************************
                      
                      
                      ;  Zero-Page Kernal Variables:
0010                  SYSTEM_VARS     equ     $0010   ; start kernal vectors and variables
                      
                      ;  Stack Frames:
0100                  U_STK_BTM       equ     $0100   ; 256 bytes default user stack space
0200                  U_STK_TOP       equ     $0200   ; User Stack initial address
0200                  S_STK_BTM       equ     $0200   ; 512 bytes default system stack space
0400                  S_STK_TOP       equ     $0400   ; System Stack initial address
                      
                      ;  Video Buffer Memory (target = $0400):
0400                  VIDEO_START     equ     $0400   ; Start of Video Buffer Memory
17FF                  VIDEO_END       equ     $17ff   ; Last Byte of Video Buffer Memory
                      
                      ;  Graphics Hardware Registers:
1800                  GFX_FLAGS       equ     $1800   ; (Byte) gfx system flags:
                                                      ;      bit 7: VSYNC
                                                      ;      bit 6: backbuffer enable
                                                      ;      bit 5: swap backbuffers (on write)
                                                      ;      bit 4: debug enable
                                                      ;      bits 2-3 = 'Background' graphics mode (40KB buffer)
                                                      ;          0) NONE (forced black background)
                                                      ;          1) Tiled 16x16 mode
                                                      ;          2) 256x160 x 64-Colors
                                                      ;          3) 512x320 x 4-Color
                                                      ;      bits 0-1 = 'Foreground' graphics mode (5KB buffer)
                                                      ;          0) 256x160 x 2-Color (with disable flag)
                                                      ;          1) Glyph Mode (32x20 text)
                                                      ;          2) Glyph Mode (64x40 text)
                                                      ;          3) 128x80 x 16-Color
1801                  GFX_AUX equ     $1801   ; (Byte) gfx auxillary/emulation flags:
                                                      ;      bit 7: 1:fullscreen / 0:windowed
                                                      ;      bit 6: reserved
                                                      ;      bit 5: reserved
                                                      ;      bit 4: reserved
                                                      ;      bit 3: reserved
                                                      ;      bit 0-2: monitor display index (0-7)
1802                  TIMING_WIDTH    equ     $1802   ; (Word) timing width
1804                  TIMING_HEIGHT   equ     $1804   ; (Word) timing height
1806                  GFX_PAL_INDX    equ     $1806   ; (Byte) gfx palette index (0-15)
1807                  GFX_PAL_DATA    equ     $1807   ; (Byte) gfx palette color bits r4g4b4a4
                      
                      ;  Paged Graphics Mode Hardware Registers:
1808                  GFX_PG_BEGIN    equ     $1808   ; start of paged gfxmode registers
1808                  GFX_EXT_ADDR    equ     $1808   ; (Word) 64K extended graphics addresses
180A                  GFX_EXT_DATA    equ     $180a   ; (Byte) 64K extended graphics RAM data
180A                  GFX_PG_END      equ     $180a   ; end of paged gfxmode registers
                      
                      ;  Mouse Cursor Hardware Registers:
180B                  CSR_XPOS        equ     $180b   ; (Word) horizontal mouse cursor coordinate
180D                  CSR_YPOS        equ     $180d   ; (Word) vertical mouse cursor coordinate
180F                  CSR_XOFS        equ     $180f   ; (Byte) horizontal mouse cursor offset
1810                  CSR_YOFS        equ     $1810   ; (Byte) vertical mouse cursor offset
1811                  CSR_SIZE        equ     $1811   ; (Byte) cursor size (0-15) 0:off
1812                  CSR_SCROLL      equ     $1812   ; (Signed) MouseWheel Scroll: -1, 0, 1
1813                  CSR_FLAGS       equ     $1813   ; (Byte) mouse button flags:
                                                      ;      bits 0-5: button states
                                                      ;      bits 6-7: number of clicks
1814                  CSR_PAL_INDX    equ     $1814   ; (Byte) mouse cursor color palette index (0-15)
1815                  CSR_PAL_DATA    equ     $1815   ; (Byte) mouse cursor color palette data RRGGBBAA
1816                  CSR_BMP_INDX    equ     $1816   ; (Byte) mouse cursor bitmap pixel offset
1817                  CSR_BMP_DATA    equ     $1817   ; (Byte) mouse cursor bitmap pixel color
                      
1817                  GFX_END equ     $1817   ; end of the GFX Hardware Registers
                      
1818                  RESERVED_HDW    equ     $1818   ; Reserved 2019 bytes ($1818 - $1FFB)
                      
                      ;  Memory Bank Selects (16MB):
1FFC                  RAMBANK_SEL_1   equ     $1ffc   ; (Word)Indexes 65536 x 8kb banks
1FFE                  RAMBANK_SEL_2   equ     $1ffe   ; (Word)Indexes 65536 x 8kb banks
                      
                      ;  Standard Usable (from FAST static 32KB) RAM:
2000                  RAM_START       equ     $2000   ; Begin System RAM (32k)
9FFF                  RAM_END equ     $9fff   ; End System RAM
                      
                      ;  Switchable RAM Banks (from SLOW external serial 16MB RAM chip):
A000                  RAM_BANK_1      equ     $a000   ; switched 8KB ram bank 1
C000                  RAM_BANK_2      equ     $c000   ; switched 8KB ram bank 2
                      
                      ;  Bios Kernal ROM:
E000                  BIOS_ROM        equ     $e000   ; Begin BIOS Kernal ROM (8KB)
                      
                      ; ***************************************
                      ; * Read Only Sytem KERNAL ROM          *
                      ; ***************************************
                                            
                       
0016                  SECTION.CODE
E000                                          org     $E000  
                                  ;* Power On Initialization            
E000                  ROM_ENTRY   
E000  CE0201                                  LDU             #U_STK_TOP+1            ; top of user stack     
E003  10CE0401                                LDS     #S_STK_TOP+1            ; top of stack space            
E007  6E9F0000                    JMP     [SOFT_RESET]      
                      
                                  
                                  ;* NMI Vector Handler                     
E00B  7EE023          do_NMI      JMP just_rti
                                  
                                  ;* SWI Vector Handler (do_SWI)   
E00E  7EE023          do_SWI          JMP just_rti
                      
                                  ;* IRQ Vector Handler         
E011  7EE023          do_IRQ      JMP just_rti
                      
                                  ;* FIRQ Vector Handler         
E014  7EE023          do_FIRQ     JMP just_rti
                      
                                  ;* SWI2 Vector Handler         
E017  7EE023          do_SWI2     JMP just_rti
                      
                                  ;* SWI3 Vector Handler         
E01A  7EE023          do_SWI3     JMP just_rti
                      
                                  ;* Reserved Vector Handler
E01D  7EE024          do_RSRV     JMP reset
                      
                                  ;* Reset Vector Handler         
E020  7EE024          do_RESET    JMP reset
                                  
                      ;********************
                      ;* RESET
                      ;**************************                     
                                              
                      ; NOTES:  
                      ;
                      ;                       SYNC still needs to be implemented along with NMI, IRQ, and FIRQ handlers
                      
E023                  just_rti        
E023  3B                                      rti 
                      
E024                  reset           
                      
                                              ; TESTING: fill the first 256 bytes of screen ram 
                                              ;               with ascending values to display
                                              
E024  7F0014                                  clr             var_cycle               ; initially clear the cycle variable
E027  7F0015                                  clr             var_mode_index  ; start with index 0
                      
                      ; ***********************
                      ; *  Pre-Fill and Cycle 
                      ; *  the Display Buffer
                      ; ***********************
                      
E02A  7F0010                                  clr             var_ch                  ; character = 0
E02D  7F0011                                  clr             var_at                  ; attribute = 0
E030  7F0012                                  clr             var_count               ; count = 0
E033  8E0400                                  ldx             #VIDEO_START    ; start of display buffer
E036                  1
E036  8C17FF                                  cmpx    #VIDEO_END              ; at the end of the buffer?
E039  2C1D                                    bge             2f                              ; yes, skip to the screen updates
E03B  B60010                                  lda             var_ch                  ; load the current character
E03E  F60011                                  ldb             var_at                  ; load the current attribute
E041  ED81                                    std             ,x++                    ; store both character and attribute
E043  7C0010                                  inc             var_ch                  ; next character
E046  7C0012                                  inc             var_count               ; increment count
E049  B60012                                  lda             var_count               ; load the count
E04C  8111                                    cmpa    #17                             ; compare the count with this amount
E04E  2DE6                                    blt             1b                              ; loop if count lower than
E050  7C0011                                  inc             var_at                  ; next attribute
E053  7F0012                                  clr             var_count               ; clear the count
E056  20DE                                    bra             1b                              ; resume the loop
                      
                                              ; INCREMENT THE SCREEN BUFFER
E058                  2
E058  8E0400                                  ldx             #VIDEO_START    ; start beginning of video buffer
E05B                  4
E05B  8C17FF                                  cmpx    #VIDEO_END              ; until the end of the video buffer
E05E  2C06                                    bge             3f                              ; restart when past the end
E060  6C80                                    inc             ,x+                             ; increment character
E062  6C80                                    inc             ,x+                             ; increment the attribute
E064  20F5                                    bra             4b                              ; loop until done
E066                  3
                                              ; TOGGLE THE BACKBUFFER
E066  B61800                                  lda             GFX_FLAGS       ; load current backbuffer
E069  8820                                    eora    #$20            ; toggle it
E06B  B71800                                  sta             GFX_FLAGS       ; save the backbuffer
                      
                                              ; INCREMENT THE CYCLE COUNTER
E06E  7C0014                                  inc             var_cycle       ; increment the cycle counter
E071  B60014                                  lda             var_cycle
E074  8120                                    cmpa    #32                     ; 32 cycles yet?
E076  2621                                    bne             continue        ; nope, continue with the main loop
E078  7F0014                                  clr             var_cycle       ; reset the cycle count
                      
                                              ; MODE CHANGES
                      
E07B  F60015                                  ldb             var_mode_index
E07E  7C0015                                  inc             var_mode_index
E081  8EE0A8                                  ldx             #mode_data
E084  A685                                    lda             b,x
E086  81FF                                    cmpa    #$ff
E088  270C                                    beq             5f
E08A  B61800                                  lda             GFX_FLAGS
E08D  84F0                                    anda    #$f0
E08F  AA85                                    ora             b,x
E091  B71800                                  sta             GFX_FLAGS
E094  2003                                    bra             continue
E096                  5       
E096  7F0015                                  clr             var_mode_index
E099                  continue
                      
                                              ; COLOR CYCLE THE MOUSE CURSOR
E099  8604                                    lda             #4
E09B  B71814                                  sta             CSR_PAL_INDX
E09E  B61815                                  lda             CSR_PAL_DATA
E0A1  8B04                                    adda    #$04
E0A3  B71815                                  sta             CSR_PAL_DATA
                                              
                      
E0A6  20B0                                    bra             2b
                      
                      
E0A8  01020304050607  mode_data       fcb             $01, $02, $03, $04, $05, $06, $07
                      
E0AF  FF                                      fcb             $ff
                      
                      
                      
                      
                      
                      
                      
                      
                      
                      
